{
  "exclude": ["build/**/*", "**/build/**/*"],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": "./packages",
    "paths": {
      "@joystream/*": ["*/src"],
      "@polkadot/*": ["*/src"]
    },
    "skipLibCheck": true
  }
}
